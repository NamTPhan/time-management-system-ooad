<AnchorPane prefHeight="800.0" prefWidth="1280.0" style="-fx-background-color: #fe4042;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.taskOverviewController">
   <children>
      <GridPane layoutY="3.0" prefHeight="800.0" prefWidth="1280.0" AnchorPane.topAnchor="3.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.rowSpan="2">
              <columns>
                <TableColumn fx:id="taskNameColumn" prefWidth="426.0" text="Task" />
              </columns>
            </TableView>
         </children>
      </GridPane>
      <Label layoutX="500.0" layoutY="60.0" text="Task overview">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
      </Label>
      <Button fx:id="deleteTask" layoutX="200.0" layoutY="275.0" mnemonicParsing="false" onAction="#deleteAction" text="Delete Task" />
      <Button fx:id="backToHome" layoutX="50.0" layoutY="50.0" mnemonicParsing="false" onAction="#backAction" text="Back" />
      <Button fx:id="editTask" layoutX="200.0" layoutY="225.0" mnemonicParsing="false" onAction="#editAction" prefHeight="31.0" prefWidth="97.0" text="Edit Task" />
      <Button fx:id="addTask" layoutX="200.0" layoutY="175.0" mnemonicParsing="false" onAction="#addAction" prefHeight="31.0" prefWidth="97.0" text="Add task" />
   </children>
</AnchorPane>
